<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <com.wulian.webrtc.ViEAndroidGLES20
            android:id="@+id/view_video"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_QueryHistoryRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QueryHistoryRecord"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_ControlStartRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ControlStartRecord"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_ControlStopRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ControlStopRecord"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_ControlHistoryRecordProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ControlHistoryRecordProgress"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_NotifyHistoryRecordHeartbeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NotifyHistoryRecordHeartbeat"
            android:textColor="#000000" />
    </LinearLayout>

</ScrollView>